      ["_tuple: []\n_optional: []\n_listOf: int\n_nb: 2", {}]
      ["_listOf: int", {}]
    ]
    "PENDING reject if is an invalid form:": [
      ["_listOf: []", {}]
      ["_tuple: string", {}]
      ["_tuple: word", {}]
      ["tuple: string", {}]
      ["listOf: string", {}]
    ]
