    "reject invalid forms": [
      ["_in: [[]]", { contain: "_in" }]
      ["_in: [{}]", { contain: "_in" }]
      ["_in: [{ _map: {} }]", { contain: "_in" }]
      ["_in: 22", { contain: "_in" }]
      ["_in: {}", { contain: "_in" }]
      ["_in: aa", { contain: "_in" }]
      ["_in: .2", { contain: "_in" }]
      ["_in: true", { contain: "_in" }]
      ["_in: null", { contain: "_in" }]
