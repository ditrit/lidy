      ["_map: false", {}]
      ["_map: true", {}]
      ["_map: null", {}]
      ["_map: string", {}]
      ["_map: 1.1", {}]
      ["_map: []", {}]
      ["_map: 1", {}]
      ["map: {}", {}]
