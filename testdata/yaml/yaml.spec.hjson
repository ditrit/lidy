{
  "validate that the yaml is valid": {
    expression: any

    "reject the empty document": {
      "": {}
    }

    "reject misuse of tags": {
      "!!oh": {}
      "!!!eh": {}
      "!!!aha!": {}
    }

    "reject unknown tags": {
      "!ih _": {}
      "!!uh _": {}
    }

    "accept strings, because it sees strings everywhere": {
      "a b": {}
      "0 b 9": {}
    }

    "accept maps with empty values": {
      "a:": {}
    }

    "accept ... this? (what is this!?)": {
      "??": {}
      "?": {}
      "??_": {}
      "???": {}
    }
  }
}
